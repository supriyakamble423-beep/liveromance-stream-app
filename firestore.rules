
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isExistingOwner(userId) {
      return resource != null && isOwner(userId);
    }

    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    // Trigger deployment comment: Updated permissions for global discovery
    
    match /roles_admin/{userId} {
      allow get: if isOwner(userId);
      allow list, create, update, delete: if false;
    }

    match /users/{userId} {
      allow read: if true;
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);

      match /transactions/{transactionId} {
        allow get, list: if isOwner(userId);
        allow create: if isOwner(userId) && request.resource.data.userId == userId;
        allow update, delete: if false;
      }
    }

    match /hosts/{hostId} {
      allow read: if true;
      // Allow any signed in user to seed mock hosts for development simulation
      allow create: if isSignedIn();
      allow update: if isOwner(hostId) || (hostId.startsWith('fake_') && isSignedIn());
      allow delete: if isOwner(hostId) || isAdmin();
    }

    match /streams/{streamId} {
      allow read: if true;
      allow create: if isSignedIn();
      allow update: if (resource != null && (resource.data.hostId == request.auth.uid || isAdmin())) || (streamId.startsWith('fake_') && isSignedIn());
      allow delete: if resource != null && (resource.data.hostId == request.auth.uid || isAdmin());

      match /messages/{messageId} {
        allow read: if true;
        allow create: if isSignedIn();
        allow update, delete: if isAdmin(); 
      }
    }

    match /adminMessages/{messageId} {
      allow list: if isSignedIn();
      allow get: if isSignedIn() && (resource.data.hostId == request.auth.uid || isAdmin());
      allow create: if isSignedIn();
      allow update, delete: if isAdmin();
    }

    match /streamRequests/{requestId} {
      allow get, list: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if isAdmin();
    }

    match /categories/{categoryId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }
  }
}
