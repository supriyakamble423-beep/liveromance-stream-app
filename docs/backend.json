
{
  "entities": {
    "UserProfile": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "UserProfile",
      "type": "object",
      "description": "Represents a user within the Global Social Marketplace application. This entity stores core user information, distinct from authentication credentials which are managed externally.",
      "properties": {
        "id": { "type": "string" },
        "username": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "profileImageUrl": { "type": "string", "format": "uri" },
        "bio": { "type": "string" },
        "country": { "type": "string" },
        "age": { "type": "number" },
        "gender": { "type": "string" },
        "language": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "username", "email", "createdAt"]
    },
    "HostProfile": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "HostProfile",
      "type": "object",
      "description": "Extends UserProfile to include details specific to users who act as hosts/streamers.",
      "properties": {
        "id": { "type": "string" },
        "userId": { "type": "string" },
        "isLive": { "type": "boolean" },
        "streamType": { "type": "string", "enum": ["public", "private", "invite-only"] },
        "viewers": { "type": "number" },
        "verified": { "type": "boolean" },
        "canStreamPublic": { "type": "boolean" },
        "canStreamPrivate": { "type": "boolean" },
        "rating": { "type": "number" },
        "previewImageUrl": { "type": "string", "format": "uri" },
        "reportsCount": { "type": "number", "description": "Count of policy violation reports." },
        "violationReason": { "type": "string", "description": "Reason for the latest violation." }
      },
      "required": ["id", "userId", "isLive", "verified"]
    },
    "StreamSession": {
      "title": "StreamSession",
      "type": "object",
      "description": "Tracks a paid private stream session for a specific user and host.",
      "properties": {
        "userId": { "type": "string" },
        "hostId": { "type": "string" },
        "expiresAt": { "type": "string", "format": "date-time" },
        "lastPaidAt": { "type": "string", "format": "date-time" }
      },
      "required": ["userId", "hostId", "expiresAt"]
    }
  },
  "auth": {
    "providers": ["password", "anonymous"]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": {
          "entityName": "UserProfile",
          "schema": { "$ref": "#/backend/entities/UserProfile" },
          "description": "Stores core user profile data."
        }
      },
      {
        "path": "/hosts/{hostId}",
        "definition": {
          "entityName": "HostProfile",
          "schema": { "$ref": "#/backend/entities/HostProfile" },
          "description": "Stores host-specific profile data."
        }
      },
      {
        "path": "/adminMessages/{messageId}",
        "definition": {
          "entityName": "AdminMessage",
          "schema": {
            "type": "object",
            "properties": {
              "hostId": { "type": "string" },
              "content": { "type": "string" },
              "timestamp": { "type": "string", "format": "date-time" }
            }
          },
          "description": "Direct messages from admin to hosts."
        }
      },
      {
        "path": "/streamSessions/{sessionId}",
        "definition": {
          "entityName": "StreamSession",
          "schema": { "$ref": "#/backend/entities/StreamSession" },
          "description": "Manages paid session access for private rooms."
        }
      }
    ]
  }
}
