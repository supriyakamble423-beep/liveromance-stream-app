
{
  "entities": {
    "UserProfile": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "UserProfile",
      "type": "object",
      "description": "Represents a user within the Global Social Marketplace application. This entity stores core user information, distinct from authentication credentials which are managed externally.",
      "properties": {
        "id": { "type": "string" },
        "username": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "profileImageUrl": { "type": "string", "format": "uri" },
        "bio": { "type": "string" },
        "country": { "type": "string" },
        "age": { "type": "number" },
        "gender": { "type": "string" },
        "language": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" },
        "coins": { "type": "number" }
      },
      "required": ["id", "username", "email", "createdAt"]
    },
    "HostProfile": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "HostProfile",
      "type": "object",
      "description": "Extends UserProfile to include details specific to users who act as hosts/streamers.",
      "properties": {
        "id": { "type": "string" },
        "userId": { "type": "string" },
        "isLive": { "type": "boolean" },
        "streamType": { "type": "string", "enum": ["public", "private", "invite-only"] },
        "viewers": { "type": "number" },
        "verified": { "type": "boolean" },
        "canStreamPublic": { "type": "boolean" },
        "canStreamPrivate": { "type": "boolean" },
        "rating": { "type": "number" },
        "previewImageUrl": { "type": "string", "format": "uri" },
        "reportsCount": { "type": "number" },
        "earnings": { "type": "number", "description": "Total diamonds earned." },
        "paymentDetails": {
          "type": "object",
          "properties": {
            "upiId": { "type": "string" },
            "accountNumber": { "type": "string" },
            "ifscCode": { "type": "string" },
            "holderName": { "type": "string" }
          }
        }
      },
      "required": ["id", "userId", "isLive", "verified"]
    },
    "PayoutRequest": {
      "title": "PayoutRequest",
      "type": "object",
      "description": "A request from a host to withdraw their earnings into cash.",
      "properties": {
        "hostId": { "type": "string" },
        "hostName": { "type": "string" },
        "amountDiamonds": { "type": "number" },
        "amountCash": { "type": "number" },
        "status": { "type": "string", "enum": ["pending", "paid", "rejected"] },
        "paymentDetails": { "type": "object" },
        "requestedAt": { "type": "string", "format": "date-time" },
        "paidAt": { "type": "string", "format": "date-time" }
      },
      "required": ["hostId", "amountDiamonds", "amountCash", "status", "requestedAt"]
    }
  },
  "auth": {
    "providers": ["password", "anonymous"]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": {
          "entityName": "UserProfile",
          "schema": { "$ref": "#/backend/entities/UserProfile" },
          "description": "Stores core user profile data."
        }
      },
      {
        "path": "/hosts/{hostId}",
        "definition": {
          "entityName": "HostProfile",
          "schema": { "$ref": "#/backend/entities/HostProfile" },
          "description": "Stores host-specific profile data."
        }
      },
      {
        "path": "/payoutRequests/{requestId}",
        "definition": {
          "entityName": "PayoutRequest",
          "schema": { "$ref": "#/backend/entities/PayoutRequest" },
          "description": "Manages withdrawal requests."
        }
      }
    ]
  }
}
